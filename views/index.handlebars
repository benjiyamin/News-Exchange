<div class="container mt-4">
  <div class="row">
    <div class="col">
      <div class="jumbotron p-2 text-center">
        <h4 class="d-inline">Articles</h4>
      </div>
      {{#each articles}}
      {{> article/article-block}}
      {{/each}}
    </div>
    <div class="col-4" id="commentAside" style="display: none">
      <div class="jumbotron p-2 text-center">
        <h4 class="d-inline">Comments</h4>
        <div class="float-right">
          <button class="btn btn-link h4 py-0 m-0" data-toggle="modal" data-target="#commentModal" type="button">
            <i class="fas fa-plus"></i>
          </button>
        </div>
      </div>
      <div id="comments"></div>
    </div>
  </div>
</div>

{{> article/comment-modal }}

{{#section 'js'}}
<script src="/js/app.js"></script>
{{/section}}